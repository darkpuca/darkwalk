<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".CommunityDetailActivity" >

    <Button
        android:id="@+id/btnJoin"
        android:text="@string/JOIN_REQUEST"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" />
    
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/btnJoin" >
        
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
            <RelativeLayout
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_marginBottom="12dp" >                
                <TextView
                    android:id="@+id/groupNameLabel"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:text="@string/GROUP_NAME" />
                <TextView
                    android:id="@+id/groupName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/groupNameLabel"
                    android:gravity="right"
                    android:textStyle="bold"                    
                    android:text="그룹명 지정 필드" />                
            </RelativeLayout>
            <RelativeLayout
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_marginBottom="12dp" >                
                <TextView
                    android:id="@+id/joinTypeLabel"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:text="@string/JOIN_TYPE" />
                <TextView
                    android:id="@+id/joinType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/joinTypeLabel"
                    android:gravity="right"
                    android:textStyle="bold"                    
                    android:text="승인제" />                
            </RelativeLayout>
            <RelativeLayout
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_marginBottom="12dp" >                
                <TextView
                    android:id="@+id/groupDescLabel"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:text="@string/GROUP_DESCRIPTION" />
                <TextView
                    android:id="@+id/groupDesc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/groupDescLabel"
                    android:gravity="left"
                    android:textStyle="normal"                    
                    android:text="그룹 설명 그룹 설명 그룹 설명 그룹 설명 그룹 설명 그룹 설명 그룹 설명 그룹 설명 그룹 설명 그룹 설명 그룹 설명 그룹 설명" />                
            </RelativeLayout>
            <RelativeLayout
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_marginBottom="12dp" >                
                <TextView
                    android:id="@+id/groupMessageLabel"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:text="@string/GROUP_MESSAGE" />
                <TextView
                    android:id="@+id/groupMessage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/groupMessageLabel"
                    android:gravity="left"
                    android:textStyle="normal"                    
                    android:text="그룹 안내글 그룹 안내글 그룹 안내글 그룹 안내글 그룹 안내글 그룹 안내글 그룹 안내글 그룹 안내글 그룹 안내글 그룹 안내글 그룹 안내글" />                
            </RelativeLayout>
            
        </LinearLayout>
        
        
    </ScrollView>

</RelativeLayout>
