<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CommunityManageActivity" >
    <RelativeLayout
        android:id="@+id/titleLayout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@color/MAIN_BG"
        android:paddingLeft="20dp"
        android:paddingRight="8dp" >
        <TextView
            android:id="@+id/titleLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="@string/TITLE_COMMUNITY_MANAGE"
            android:textColor="@color/WHITE"
            android:textSize="24sp"
            android:textStyle="bold" />
    </RelativeLayout>
    
	<RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/titleLayout"
        android:padding="@dimen/activity_horizontal_margin"
        android:background="@color/MAIN_BG" >
	    <LinearLayout
	        android:id="@+id/infoLayout"
	        android:orientation="vertical"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:padding="@dimen/activity_horizontal_margin"
	        android:background="@drawable/innerframe_shape" >
	        <RelativeLayout
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:minHeight="36dp" >
	            <TextView
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_alignParentLeft="true"
	                android:layout_centerVertical="true"
	                android:textSize="16sp"
	                android:textColor="@color/GRAY"
	                android:text="@string/GROUP_NAME" />
	            <TextView
	                android:id="@+id/communityName"
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:layout_alignParentRight="true"
	                android:layout_centerVertical="true"
	                android:layout_marginLeft="4dp"
	                android:gravity="right"
	                android:textSize="20sp"
	                android:textStyle="bold"
	                android:textColor="@color/DARK_GRAY"
	                android:text="COMMUNITY_NAME" />
	        </RelativeLayout>
	        <RelativeLayout
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:minHeight="36dp" >
	            <TextView
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_alignParentLeft="true"
	                android:layout_centerVertical="true"
	                android:textSize="16sp"
	                android:textColor="@color/GRAY"
	                android:text="@string/GROUP_MEMBERS" />
	            <TextView
	                android:id="@+id/communityMembers"
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:layout_alignParentRight="true"
	                android:layout_centerVertical="true"
	                android:layout_marginLeft="4dp"
	                android:gravity="right"
	                android:textSize="20sp"
	                android:textStyle="bold"
	                android:textColor="@color/DARK_GRAY"
	                android:text="MEMBERS" />
	        </RelativeLayout>
	    </LinearLayout>    
	
		<LinearLayout
	        android:orientation="vertical"
	        android:layout_below="@+id/infoLayout"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:layout_marginTop="6dp" >
	        <LinearLayout
	            android:orientation="vertical"
	            android:layout_width="match_parent"
	            android:layout_height="0dp"
	            android:layout_weight="1"
	            android:padding="@dimen/activity_horizontal_margin"
	            android:background="@drawable/innerframe_shape" >
	            <TextView
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:textSize="16sp"
	                android:textColor="@color/GRAY"
	                android:text="@string/MEMBER_LIST" />
	            <ListView
	                android:id="@+id/membersList"
	                android:layout_width="match_parent"
	                android:layout_height="match_parent"
	                android:layout_marginTop="4dp" />
	        </LinearLayout>
	        <LinearLayout
	            android:orientation="vertical"
	            android:layout_width="match_parent"
	            android:layout_height="0dp"
	            android:layout_weight="1"
	            android:layout_marginTop="8dp"
	            android:padding="@dimen/activity_horizontal_margin"
	            android:background="@drawable/innerframe_shape" >
	            
	            <TextView
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:textSize="16sp"
	                android:textColor="@color/GRAY"
	                android:text="@string/APPLICANTS" />
	            <ListView
	                android:id="@+id/applicantsList"
	                android:layout_width="match_parent"
	                android:layout_height="match_parent"
	                android:layout_marginTop="4dp" />
	            	                
	        </LinearLayout>
	    </LinearLayout>
		    
	</RelativeLayout>
    
    

    
</RelativeLayout>
