<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android"> 
    <item android:id="@android:id/background">
		<shape>
			<corners android:radius="8dp" />
			<gradient
			    android:startColor="@color/LIGHT_GRAY"
			    android:centerColor="@color/LIGHT_GRAY"
				android:endColor="@color/WHITE"
				android:centerY="0.75"
				android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="@color/DARK_GRAY" />
		</shape>
	</item>
	<item android:id="@android:id/secondaryProgress">
	    <clip>
	        <shape>
	            <corners android:radius="8dp" />
	            <gradient
	                android:startColor="#e86843"
	                android:centerColor="#e86843"
	                android:endColor="#fecc2f"
	                android:centerY="0.75"
	                android:angle="270" />
	            <stroke
	                android:width="1dp"
	                android:color="@color/DARK_GRAY" />
	        </shape>
        </clip>
	</item>
	<item android:id="@android:id/progress">
	    <clip>
	        <shape>
	            <corners android:radius="8dp" />
	            <gradient 
	                android:startColor="#fecc2f"
	                android:centerColor="#fecc2f"
	                android:endColor="#fecc2f"
	                android:centerY="0.75"
	                android:angle="270" />
	            <stroke
	                android:width="1dp"
	                android:color="@color/DARK_GRAY" />
	            <padding
	                android:left="10dp"
	                android:top="10dp"
	                android:right="10dp"
	                android:bottom="10dp" />
			</shape>
		</clip>
	</item>
</layer-list>